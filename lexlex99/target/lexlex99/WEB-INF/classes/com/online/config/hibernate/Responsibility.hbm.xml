<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.online.module.master.responsibility.model">
	<class name="Responsibility" table="mst_responsibility">
		<id name="responsibilityId" column="RESPONSIBILITY_ID" type="long">
			<generator class="native" />
		</id>
		
		<property name="name" column="name" type="string" />
		<property name="description" column="description" type="string" />
		
		<property name="createBy" column="create_by" type="string" />
		<property name="createOn" column="create_on" type="timestamp" />
		<property name="updateBy" column="update_by" type="string" />
		<property name="updateOn" column="update_on" type="timestamp" />
		<property name="recordFlag" column="record_flag" type="string" />
		
		<bag name="responsibilityDetailList" inverse="true" cascade="save-update, delete-orphan"
			order-by="responsibility_detail_id asc">
			<key column="responsibility_id" />
			<one-to-many not-found="ignore" class="com.online.module.master.responsibility.model.ResponsibilityDetail" />
		</bag>
		
		
	</class>
</hibernate-mapping>