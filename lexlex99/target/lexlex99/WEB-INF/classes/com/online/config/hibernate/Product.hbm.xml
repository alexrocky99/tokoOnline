<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.online.module.master.product.model">
	<class name="Product" table="mst_product">
		<id name="productId" column="PRODUCT_ID" type="long">
			<generator class="native" />
		</id>
		
		<property name="productCode" column="PRODUCT_CODE" type="string" />
		<property name="sku" column="SKU" type="string" />
		<property name="productName" column="PRODUCT_NAME" type="string" />
		<property name="barcode" column="BARCODE" type="string" />
		<property name="description" column="DESCRIPTION" type="string" />
		<property name="totalStock" column="TOTAL_STOCK" type="int" />
		<property name="price" column="PRICE" type="big_decimal" />
		<property name="status" column="STATUS" type="string" />
		
		<property name="createBy" column="create_by" type="string" />
		<property name="createOn" column="create_on" type="timestamp" />
		<property name="updateBy" column="update_by" type="string" />
		<property name="updateOn" column="update_on" type="timestamp" />
		<property name="recordFlag" column="record_flag" type="string" />
		
		<bag name="productImageList" inverse="true" cascade="save-update, delete-orphan"
			order-by="product_image_id asc">
			<key column="product_id" />
			<one-to-many not-found="ignore" class="com.online.module.master.product.model.ProductImage" />
		</bag>
		
		<bag name="productModalList" inverse="true" cascade="save-update, delete-orphan"
			order-by="product_modal_id asc">
			<key column="product_id" />
			<one-to-many not-found="ignore" class="com.online.module.master.product.model.ProductModal" />
		</bag>
		
	</class>
</hibernate-mapping>