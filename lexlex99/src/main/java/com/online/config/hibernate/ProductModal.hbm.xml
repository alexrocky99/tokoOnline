<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.online.module.master.product.model">
	<class name="ProductModal" table="mst_product_modal">
		<id name="productModalId" column="PRODUCT_MODAL_ID" type="long">
			<generator class="native" />
		</id>
		
		<many-to-one name="product" column="product_id"
			class="com.online.module.master.product.model.Product" fetch="join" />
		
		<property name="productFrom" column="PRODUCT_FROM" type="string" />
		<property name="currentPrice" column="CURRENT_PRICE" type="big_decimal" />
		<property name="currentStock" column="CURRENT_STOK" type="int" />
		
		<property name="createBy" column="create_by" type="string" />
		<property name="createOn" column="create_on" type="timestamp" />
		<property name="updateBy" column="update_by" type="string" />
		<property name="updateOn" column="update_on" type="timestamp" />
		<property name="recordFlag" column="record_flag" type="string" />
		
		<bag name="productModalDetailList" inverse="true" cascade="save-update, delete-orphan"
			order-by="product_modal_detail_id asc">
			<key column="product_modal_id" />
			<one-to-many not-found="ignore" class="com.online.module.master.product.model.ProductModalDetail" />
		</bag>
		
	</class>
</hibernate-mapping>