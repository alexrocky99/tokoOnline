<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.online.module.master.parameter.model">
	<class name="Parameter" table="mst_parameter">
		<id name="parameterId" column="PARAMETER_ID" type="long">
			<generator class="native" />
		</id>
		
		<property name="code" column="code" type="string" />
		<property name="value" column="value" type="string" />
		<property name="description" column="description" type="string" />
		
		<property name="createBy" column="create_by" type="string" />
		<property name="createOn" column="create_on" type="timestamp" />
		<property name="updateBy" column="update_by" type="string" />
		<property name="updateOn" column="update_on" type="timestamp" />
		<property name="recordFlag" column="record_flag" type="string" />
		
		<bag name="parameterDetailList" inverse="true" cascade="save-update, delete-orphan"
			order-by="parameter_detail_id asc">
			<key column="parameter_id" />
			<one-to-many not-found="ignore" class="com.online.module.master.parameter.model.ParameterDetail" />
		</bag>
	</class>
</hibernate-mapping>